{
  "name": "desserbee-web",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development && env-cmd -f .env.dev next dev --turbopack",
    "dev:test": "cross-env NODE_ENV=test && env-cmd -f .env.test next dev",
    "build": "cross-env NODE_ENV=production && env-cmd -f .env.prod next build",
    "build:dev": "cross-env NODE_ENV=development && env-cmd -f .env.dev next build",
    "build:test": "cross-env NODE_ENV=test && env-cmd -f .env.test next build",
    "start": "cross-env NODE_ENV=production && env-cmd -f .env.prod next start",
    "start:test": "cross-env NODE_ENV=test && env-cmd -f .env.test next start",
    "lint": "next lint --max-warnings 0",
    "check-types": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@formatjs/intl-localematcher": "^0.5.10",
    "@radix-ui/react-slot": "^1.1.1",
    "@repo/entity": "workspace:*",
    "@repo/ui": "workspace:*",
    "@repo/usecase": "workspace:*",
    "@repo/infrastructures": "workspace:*",
    "@repo/utility": "workspace:*",
    "cross-env": "^7.0.3",
    "env-cmd": "^10.1.0",
    "negotiator": "^1.0.0",
    "next": "^15.1.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "3.2.4",
    "@playwright/test": "^1.49.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@storybook/addon-essentials": "8.6.0-alpha.1",
    "@storybook/addon-interactions": "8.6.0-alpha.1",
    "@storybook/addon-onboarding": "8.6.0-alpha.1",
    "@storybook/addon-themes": "^8.5.0",
    "@storybook/blocks": "8.6.0-alpha.1",
    "@storybook/nextjs": "8.6.0-alpha.1",
    "@storybook/react": "8.6.0-alpha.1",
    "@storybook/test": "8.6.0-alpha.1",
    "@types/negotiator": "^0.6.3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "msw": "^2.7.0",
    "msw-storybook-addon": "^2.0.4",
    "postcss": "^8.5.1",
    "storybook": "8.6.0-alpha.1",
    "tailwindcss": "^3.4.17",
    "typescript": "5.5.4"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
