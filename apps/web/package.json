{
  "name": "web",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development && env-cmd -f .env.dev next dev --turbopack",
    "dev:test": "cross-env NODE_ENV=test && env-cmd -f .env.test next dev",
    "build": "cross-env NODE_ENV=production && env-cmd -f .env.prod next build",
    "build:dev": "cross-env NODE_ENV=development && env-cmd -f .env.dev next build",
    "build:test": "cross-env NODE_ENV=test && env-cmd -f .env.test next build",
    "start": "cross-env NODE_ENV=production && env-cmd -f .env.prod next start",
    "start:test": "cross-env NODE_ENV=test && env-cmd -f .env.test next start",
    "lint": "next lint --max-warnings 0",
    "check-types": "tsc --noEmit",
    "build:css": "tailwindcss -i ./app/styles/globals.css -o ./app/styles/output.css --watch"
  },
  "dependencies": {
    "@repo/ui": "workspace:*",
    "cross-env": "^7.0.3",
    "next": "^15.1.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "env-cmd": "^10.1.0",
    "msw": "^2.7.0",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "typescript": "5.5.4"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
